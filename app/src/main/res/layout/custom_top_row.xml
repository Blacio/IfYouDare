<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="@dimen/five_padding"
    card_view:cardCornerRadius="@dimen/five_padding"
    card_view:cardBackgroundColor="@color/colorPrimary">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">

        <TextView
            android:id="@+id/number_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:maxLines="1"
            android:maxLength="3"
            android:gravity="center"
            android:textSize="@dimen/user_data_name"
            android:textStyle="bold"
            android:padding="@dimen/five_padding"
            android:textColor="@android:color/white"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/friendDarePicture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/five_padding"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/friendDare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:maxLines="3"
            android:maxLength="30"
            android:fontFamily="casual"
            android:gravity="center"
            android:textSize="@dimen/instr_dimentwo"
            android:textStyle="bold"
            android:padding="@dimen/five_padding"
            android:textColor="@android:color/white"
            android:layout_weight="2" />


        <TextView
            android:id="@+id/friendDareStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/five_padding"
            android:textColor="@android:color/white"
            android:textSize="@dimen/instr_dimentwo"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>