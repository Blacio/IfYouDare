<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearDialog"
    android:background="@color/colorAccent"
    android:layout_margin="@dimen/seven_pading">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:textColor="@android:color/black"
        android:id="@+id/dareFriendName"
        android:layout_margin="@dimen/seven_pading"
        android:textSize="@dimen/user_data_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dialog_photo"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="@dimen/five_padding"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text_dialog"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="THIS IS THE CHALLENGE!"
            android:textSize="@dimen/user_data_text"
            android:layout_margin="@dimen/five_padding"
            android:textColor="@android:color/black"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/five_padding"
        android:weightSum="2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ACCEPT"
            android:layout_weight="1"
            android:id="@+id/buton_yes"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:textColor="@android:color/black"
            android:textSize="@dimen/user_data_name"
            android:shadowDx="4"
            android:shadowDy="0"
            android:shadowRadius="5"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="REFUSE"
            android:layout_weight="1"
            android:id="@+id/buton_no"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="4"
            android:shadowDy="0"
            android:textColor="@android:color/black"
            android:textSize="@dimen/user_data_name"
            android:shadowRadius="5"/>

    </LinearLayout>
</LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progBarPhoto"/>

</FrameLayout>