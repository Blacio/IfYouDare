<?xml version="1.0" encoding="utf-8"?>

<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:layout_margin="@dimen/padding_layout_dim"
    android:orientation="vertical"
    tools:context="com.blacio.ifyoudare.SubmitActivity"
    android:weightSum="3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/user_data_text"
        android:paddingBottom="@dimen/seven_pading"
        android:gravity="bottom|center_horizontal"
        android:textColor="@android:color/white"
        android:text="@string/submit1"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:onClick="onSubmit"
        android:text="SUBMIT"
        android:layout_margin="@dimen/seven_pading"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/user_data_title"
        android:layout_weight="1"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="4"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/user_data_text"
        android:paddingTop="@dimen/seven_pading"
        android:gravity="top|center_horizontal"
        android:textColor="@android:color/white"
        android:text="@string/submit2"
        android:layout_weight="1"/>

</LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progB" />

</FrameLayout>
